import 'package:flutter/material.dart';

class CustomScaffold extends StatelessWidget {
  final Widget body;
  final Color bgColor;
  const CustomScaffold({required this.body, required this.bgColor});
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      backgroundColor : bgColor,
      body: SafeArea(
        child: body,
      ),
    );
  }
}
